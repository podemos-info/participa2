<div class="card card--action card--list">
  <% resources.each do |campaign| %>
    <div class="card--list__item">
      <%= icon 'actions', class: 'card--list__icon', remove_icon_class: true %>
      <%= link_to resource_locator(campaign).path, class: 'card--list__text card__link card__link--block' do %>
        <h5 class="card--list__heading">
          <%= translated_attribute(campaign.title) %>
        </h5>
      <% end %>
    </div>
  <% end %>
</div>