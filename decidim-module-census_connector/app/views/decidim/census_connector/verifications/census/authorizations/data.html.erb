<div class="wrapper">
  <div class="row collapse">
    <div class="row collapse">
      <div class="columns large-8 large-centered text-center page-title">
        <h1><%= t(".title") %></h1>
      </div>
    </div>

    <div class="row">
      <div class="columns large-8 medium-centered census-form">
        <%= decidim_form_for(@form, url: current_form_path) do |form| %>
          <%= render partial: "personal_data_part", locals: { form: form } if @form.personal_part? %>
          <%= render partial: "location_data_part", locals: { form: form } if @form.location_part? %>
          <%= render partial: "phone_data_part", locals: { form: form } if @form.phone_part? %>

          <div class="card">
            <div class="card__content">
              <div class="actions">
                <%= form.submit t("authorize", scope: "decidim.verifications.authorizations.new"), class: "button expanded" %>
              </div>
              <% if has_person? %>
                <p class="text-center">
                  <a href="<%= decidim_census_account.root_path%>">
                    <%= t("go_back", scope: "decidim.census_connector.verifications.census.authorizations") %>
                  </a>
                </p>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag "datepicker-locales/foundation-datepicker.#{I18n.locale}.js" if I18n.locale != :en %>
<%= javascript_include_tag 'decidim/census_connector/verifications/census' %>
