<%= javascript_include_tag "decidim/slug_form" %>

<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= title %></h2>
  </div>

  <div class="card-section">
    <div class="row column" >
      <%= form.translated :text_field, :title, autofocus: true %>
    </div>

    <div class="row column" >
      <%= form.translated :text_field, :description %>
    </div>

    <div class="row column" >
      <%= form.text_field :form_number %>

      <p class="help-text">
        <%== t(".form_number_help") %>
      </p>
    </div>

    <div class="row column slug">
      <%= form.text_field :slug %>

      <p class="help-text">
        <%== t(".slug_help", url: decidim_form_slug_url(main_component_path(current_component)[1..-2], form.object.slug)) %>
      </p>
    </div>

    <div class="row column" >
      <%= form.check_box :require_login %>

      <p class="help-text">
        <%== t(".require_login_help") %>
      </p>
    </div>

    <div class="row column" >
      <%= form.check_box :hidden %>

      <p class="help-text">
        <%== t(".hidden_help") %>
      </p>
    </div>
  </div>
</div>
