<div class="column">
  <article class="card card--gravity_form">
    <div class="card__content">
      <div class="card__header">
        <%= link_to gravity_form do %>
          <h5 class="card__title">
            <%= translated_attribute(gravity_form.title) %>
          </h5>
        <% end %>
      </div>

      <p><%= truncate(translated_attribute(gravity_form.description), length: 100) %></p>
    </div>

    <div class="card__footer">
      <div class="card__support">
        <div class="card__support__data">
          <%= authenticated_link_to t(".fill_in"), gravity_form, class: "card__button button small secondary" %>
        </div>
      </div>
    </div>
  </article>
</div>
