<% add_decidim_meta_tags({
  title: translated_attribute(gravity_form.title),
  url: gravity_form_url(gravity_form.id)
}) %>

<div class="row column view-header">
  <h2 class="heading2">
    <%= translated_attribute gravity_form.title %>
  </h2>
</div>

<div class="row">
  <div class="columns section mediumlarge-8">
    <iframe id="js-iframe"
            src="//<%= current_component.settings[:domain] %>/gfembed/?f=<%= gravity_form.form_number %>"
            width="100%"
            height="500"
            frameBorder="0"
            class="gfiframe">
    </iframe>

    <script src="//<%= current_component.settings[:domain] %>/wp-content/plugins/gravity-forms-iframe/assets/scripts/gfembed.min.js"
            type="text/javascript">
    </script>
  </div>
</div>
