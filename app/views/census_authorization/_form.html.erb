<% if form.object.needs_data? %>
  <div class="field">
    <%= form.text_field :first_name %>
  </div>

  <div class="field">
    <%= form.text_field :last_name1 %>
  </div>

  <div class="field">
    <%= form.text_field :last_name2 %>
  </div>

  <div class="field">
    <%= form.select :document_type, handler.census_document_types, prompt: true %>
  </div>

  <div class="field">
    <%= form.text_field :document_id %>
  </div>

  <div class="field date">
    <%= form.date_field :born_at, "data-start-view" => "decade", "data-date-format" => "dd-mm-yyyy", "data-date-startdate" => 120.years.ago.to_date, "data-date-enddate" => 14.years.ago.to_date %>
  </div>

  <div class="field">
    <%= form.text_field :postal_code %>
  </div>

  <div class="field">
    <%= form.scopes_select :scope_id, remote_path: decidim.scopes_search_path %>
  </div>
<% else %>
  <%= content_tag(:p, t(".data_not_needed")) %>
<% end %>
<%= form.hidden_field :handler_name %>

<div class="actions">
  <%= form.submit t("authorize", scope: "decidim.authorizations.new"), class: "button expanded" %>
</div>